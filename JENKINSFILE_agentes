pipeline
{
    agent any

    options { skipDefaultCheckout() }
    
    stages
    {
        stage('Get Code')
        {
            steps
            {
                //Obtener c√≥digo del repo
                git 'https://github.com/Cjimenez-unir/CP1.git'
                stash name:'code', includes:'**'
            }
        }
        
        stage('Build')
        {
            steps
            {
                echo 'En python no hace falta compilar.'
                echo WORKSPACE
                bat 'dir'
            }
        }
        
        stage ('Tests')
        {
            parallel
            {
                stage('Unit')
                {
                    agent {label 'agent1'}
                    steps
                    {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE')
                        {
                            unstash name:'code'
                            bat '''
                                set PYTHONPATH=%WORKSPACE%
                                pytest --junitxml=result-unit.xml test\\unit
                            '''
                            stash name: 'results-unit', includes: 'result-unit.xml'
                        }
                    }
                }
                
                stage('Service') 
                {
                    steps
                    {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE')
                        {
                            unstash name:'code'
                            bat '''
                                set FLASK_APP=app\\api.py
                                start flask run
                                start java -jar C:\\Users\\falua\\Documents\\Unir\\MasterDevOps\\wiremock\\wiremock-standalone-3.13.2.jar --port 9090 --root-dir test\\wiremock
                                set PYTHONPATH=%WORKSPACE%
                                pytest --junitxml=result-rest.xml test\\rest
                            '''
                            stash name: 'results-rest', includes: 'result-rest.xml'
                        }
                    }
                }
            }
        }
            
        stage('Results')
        {
            steps
            {
                unstash name:'results-unit'
                unstash name:'results-rest'
                junit 'result*.xml'
            }
        }
    }
}
